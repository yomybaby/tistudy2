<Alloy>
	<Window class="container">
		<ListView>
			<Templates>
				<ItemTemplate name="leftTpl">
					<Label bindId="label">Left!</Label>
				</ItemTemplate>
				<ItemTemplate name="rightTpl">
					<Label right="0" bindId="label">Right!</Label>
				</ItemTemplate>
			</Templates>
			<ListSection>
				<ListItem template="leftTpl" label:text="New Left"></ListItem>
				<ListItem template="rightTpl" label:text="New Right"></ListItem>
			</ListSection>
		</ListView>
	</Window>
</Alloy>